{
  "workbench.colorTheme": "Material Theme Palenight High Contrast",
  // linter
  // "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    // "source.fixAll.eslint": "explicit"
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit",
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.formatOnSave": true,
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    // "editor.formatOnSave": true,
  },
  // "biome.lspBin": "sfu-bot-server/node_modules/@biomejs/biome/bin/biome",
  // test
  "jest.autoRun": "off",
  // editor設定
  "editor.fontSize": 14,
  "editor.wordWrap": "on",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.autoIndent": "full",
  "editor.cursorBlinking": "smooth",
  // "editor.renderLineHighlight"    : "all",
  "editor.renderControlCharacters": true,
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.autoClosingQuotes": "beforeWhitespace",
  "breadcrumbs.enabled": false,
  // ワークベンチ設定
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.showIcons": true,
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  // vim
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.color": "rgba(0, 240, 170, 0.5)",
  "vim.highlightedyank.duration": 150,
  "vim.leader": "<space>",
  "vim.autoindent": true,
  "vim.visualstar": true,
  "vim.useCtrlKeys": true,
  "vim.useSystemClipboard": true,
  "vim.statusBarColorControl": false,
  // enable plugin
  // "vim.surround": true,
  "vim.normalModeKeyBindings": [],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "j"
      ],
      "after": [
        "g",
        "j"
      ]
    },
    {
      "before": [
        "k"
      ],
      "after": [
        "g",
        "k"
      ]
    },
    // {
    //   "before": [
    //     "J"
    //   ],
    //   "after": [
    //     "1",
    //     "0",
    //     "j"
    //   ]
    // },
    // {
    //   "before": [
    //     "K"
    //   ],
    //   "after": [
    //     "1",
    //     "0",
    //     "k"
    //   ]
    // },
    // {
    //   "before": [
    //     "H"
    //   ],
    //   "after": [
    //     "0"
    //   ]
    // },
    // {
    //   "before": [
    //     "L"
    //   ],
    //   "after": [
    //     "$"
    //   ]
    // },
    {
      "before": [
        "s",
        "h"
      ],
      "after": [
        "<C-w>",
        "h"
      ]
    },
    {
      "before": [
        "s",
        "j"
      ],
      "after": [
        "<C-w>",
        "j"
      ]
    },
    {
      "before": [
        "s",
        "k"
      ],
      "after": [
        "<C-w>",
        "k"
      ]
    },
    {
      "before": [
        "s",
        "l"
      ],
      "after": [
        "<C-w>",
        "l"
      ]
    },
    {
      "before": [
        "<Leader>",
        "s"
      ],
      "commands": [
        ":split"
      ]
    }, //水平に開く
    {
      "before": [
        "<Leader>",
        "d"
      ],
      "commands": [
        ":vsplit"
      ]
    }, //水平にを閉じる
    {
      "before": [
        "t",
        "n"
      ],
      "after": [
        "g",
        "t"
      ]
    }, //tab移動
    {
      "before": [
        "t",
        "p"
      ],
      "after": [
        "g",
        "T"
      ]
    }, //tab移動
    //コマンドパレット
    {
      "before": [
        "<Leader>",
        ","
      ],
      "commands": [
        {
          "command": "workbench.action.quickOpen"
        }
      ]
    },
  ],
  "vim.insertModeKeyBindings": [],
  // openapi
  "openapi.defaultPreviewRenderer": "redoc",
  // vsnotes
  "vsnotes.defaultNotePath": "~/work/documents/vsnotes",
  "vsnotes.tokens": [
    {
      "type": "datetime",
      "token": "{dt}",
      "format": "YYYY-MM-DD_HH-mm",
      "description": "Insert formatted datetime."
    },
    {
      "type": "datetime",
      "token": "{my_dt}",
      "format": "YYYY-MM-DD",
      "description": "Insert formatted datetime."
    },
    {
      "type": "title",
      "token": "{title}",
      "description": "Insert note title from input box.",
      "format": "Untitled"
    },
    {
      "type": "extension",
      "token": "{ext}",
      "description": "Insert file vsnotes.",
      "format": "md"
    }
  ],
  "vsnotes.defaultNoteTitle": "{my_dt}_{title}.{ext}",
  "terminal.integrated.env.osx": {
    "FIG_NEW_SESSION": "1"
  },
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "Monokai Pro (Filter Machine) Icons",
  "window.zoomLevel": -1,
  "security.workspace.trust.untrustedFiles": "open",
  "diffEditor.ignoreTrimWhitespace": false,
  "github.copilot.editor.enableAutoCompletions": true,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "workbench.sideBar.location": "right",
  "git.openRepositoryInParentFolders": "always",
  "editor.renderWhitespace": "all",
}